{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "strict": true,
    "noImplicitAny": false,

    "noImplicitThis": false,

    "esModuleInterop": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "dist/**/*"]
}
